{
    "version": "1.5.0-beta",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false
    },
    "compileOnSave": true,
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts",
        "!./typings/**/*.d.ts"
    ],
    "files": [
        "./index.ts",
        "./lib/backup/directory-backup.ts",
        "./lib/backup/index.ts",
        "./lib/log.ts",
        "./lib/serve/index.ts",
        "./lib/serve/runner.ts",
        "./lib/serve/server-runner.ts",
        "./lib/serve/spa-runner.ts"
    ]
}
